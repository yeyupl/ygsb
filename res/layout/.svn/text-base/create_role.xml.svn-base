<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	>
		<LinearLayout android:orientation="vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingLeft="3dip"
			android:paddingRight="3dip"
			android:paddingBottom="3dip"
			android:background="#0C0F17"
			>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/role_bar"
				android:textColor="@color/white"
				android:textSize="14dip"
				android:gravity="center"
				android:text="@string/camp_human"
				 />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_marginTop="10dip"
				android:gravity="center">
				<ImageButton android:id="@+id/btn_job_mars"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:background="@drawable/avatar_bg"
					android:src="@drawable/avatar"
					android:layout_weight="1.0" />
				<ImageButton android:id="@+id/btn_job_mage"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="5dip"
					android:background="@drawable/avatar_bg"
					android:src="@drawable/avatar"
					android:layout_weight="1.0" />
			</LinearLayout>
			<TextView  
		     android:layout_width="fill_parent" 
		     android:layout_height="1dip" 
		     android:layout_marginTop="7dip"
		     android:background="#323232"
		    />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:textColor="@color/white"
				android:textSize="14dip"
				android:gravity="center"
				android:layout_marginTop="3dip"
				android:text="@string/camp_beast"
				android:background="@drawable/role_bar" />
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_marginTop="10dip"
				android:gravity="center">
				<ImageButton android:id="@+id/btn_job_beast"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:background="@drawable/avatar_bg"
					android:src="@drawable/avatar"
					android:layout_weight="1.0" />
				<ImageButton android:id="@+id/btn_job_fairy"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="5dip"
					android:background="@drawable/avatar_bg"
					android:src="@drawable/avatar"
					android:layout_weight="1.0" />
			</LinearLayout>
		</LinearLayout>
		<TextView  
		     android:layout_width="1dip" 
		     android:layout_height="fill_parent" 
		     android:background="#323232"
		    />
		<LinearLayout 
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			>
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_margin="10dip">
				<ImageView android:id="@+id/job_avatar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:background="@drawable/avatar_bg_normal"
					android:src="@drawable/avatar"
					/>
				<TextView android:id="@+id/job_intro"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:layout_marginLeft="5dip"
					android:textColor="#6699CC"
					android:textSize="14dip"
					android:text="@string/job_mage_intro"
					/>
			</LinearLayout>
			<TextView  
		     android:layout_width="fill_parent" 
		     android:layout_height="1dip" 
		     android:background="#323232"
		    />
			<EditText  
	    	 android:id="@+id/role_name"
		     android:layout_width="fill_parent" 
		     android:layout_height="wrap_content" 
		     android:layout_marginTop="10dip"
		     android:layout_marginLeft="10dip"
		     android:layout_marginRight="10dip"
		     android:hint="@string/text_role_name_hint"
		     android:textSize="15dip"
		     android:singleLine="true"
		     android:maxLength="10"
		    />
		    <LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:layout_marginLeft="10dip"
		     	android:layout_marginRight="10dip"
				>
				<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:layout_weight="1.0"
				>
					<Button android:id="@+id/btn_role_gender_male"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="@string/gender_male"
						android:textSize="20dip"
						style="@style/btn"
						/>
					<Button android:id="@+id/btn_role_gender_female"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:text="@string/gender_female"
						android:layout_marginLeft="5dip"
						android:textSize="20dip"
						style="@style/btn"
						/>
					</LinearLayout>
				<Button android:id="@+id/btn_role_create"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:text="@string/btn_create"
					android:textSize="20dip"
					style="@style/btn"
					android:layout_weight="1.0"
					android:layout_gravity="right"
				/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<TextView  
	     android:layout_width="fill_parent" 
	     android:layout_height="1dip" 
	     android:background="#323232"
	    />
</LinearLayout>
