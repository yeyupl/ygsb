<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
	>
	<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:background="@drawable/skill_panel_bg"
		>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="0dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="left"
			>
			<ImageView android:id="@+id/role_skill_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_ok" 
				/>
			<TextView android:id="@+id/role_skill_action_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="已学(3/3)"
				/>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="90dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="left"
			>
			<ImageView android:id="@+id/role_skill_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_ok" 
				/>
			<TextView android:id="@+id/role_skill_action_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="可升级(1/3)"
				/>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_marginRight="120dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="right"
			>
			<ImageView android:id="@+id/role_skill_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_ok" 
				/>
			<TextView android:id="@+id/role_skill_action_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="可学(0/3)"
				/>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="10dip"
			android:layout_marginRight="10dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="right"
			>
			<ImageView android:id="@+id/role_skill_4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_no"
				/>
			<TextView android:id="@+id/role_skill_action_4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="25级"
				/>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="100dip"
			android:layout_marginRight="10dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="right"
			>
			<ImageView android:id="@+id/role_skill_5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_no" 
				/>
			<TextView android:id="@+id/role_skill_action_5"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="30级"
				/>
		</LinearLayout>
		
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="100dip"
			android:layout_marginRight="120dip"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			android:layout_gravity="right"
			>
			<ImageView android:id="@+id/role_skill_6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:background="@drawable/skill_unknow" 
				/>
			<TextView android:id="@+id/role_skill_action_4"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gray"
				android:textSize="14dip"
				android:text="未开放"
				/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
