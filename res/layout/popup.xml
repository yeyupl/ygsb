<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center_horizontal"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/popup_scroller" android:background="@drawable/popup_bg" android:scrollbars="none" android:fadingEdgeLength="5dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dip">
        <LinearLayout android:orientation="vertical" android:id="@+id/popup_action" android:padding="10dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1.0" />
    </ScrollView>
    <ImageView android:id="@+id/popup_arrow_up" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:src="@drawable/popup_arrow_up" />
    <ImageView android:id="@+id/popup_arrow_down" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="-4dip" android:src="@drawable/popup_arrow_down" android:layout_below="@id/popup_scroller" />
</RelativeLayout>