<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@drawable/shop_bg"
	>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginTop="38dip"
		>
		<RadioGroup 
				android:id="@+id/shop_tab"
				android:orientation="horizontal"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:checkedButton="@+id/shop_tab_hot"
				android:layout_marginLeft="150dip"
				>
				<RadioButton android:id="@+id/shop_tab_hot"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/tab_bg"
					android:button="@null"
					android:textColor="@color/white"
					android:textSize="13dip"
					android:gravity="center_horizontal|bottom"
					android:text="@string/text_shop_hot"
					/>
				 <RadioButton android:id="@+id/shop_tab_prop"
				 	android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/tab_bg"
					android:button="@null"
					android:textColor="@color/white"
					android:textSize="13dip"
					android:gravity="center_horizontal|bottom"
					android:text="@string/text_shop_prop"
					android:layout_marginLeft="3dip"
					/>
				<RadioButton android:id="@+id/shop_tab_diamond"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/tab_bg"
					android:button="@null"
					android:textColor="@color/white"
					android:textSize="13dip"
					android:gravity="center_horizontal|bottom"
					android:text="@string/text_shop_diamond"
					android:layout_marginLeft="3dip"
					/>
			</RadioGroup>
			<ImageButton android:id="@+id/btn_shop_close"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:background="@drawable/btn_close"
				android:layout_marginLeft="40dip"
				/>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="280dip" 
		android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:layout_marginRight="25dip"
		android:layout_marginBottom="25dip"
		android:layout_gravity="right"
		>
		<GridView xmlns:android="http://schemas.android.com/apk/res/android" 
		   	android:id="@+id/shop_list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:verticalSpacing="10dip"
			android:horizontalSpacing="10dip"
			android:numColumns="2"
			android:stretchMode="columnWidth"
			android:scrollbarStyle="outsideInset"
			android:gravity="center" 			
			/>		
	</LinearLayout>
</LinearLayout>
